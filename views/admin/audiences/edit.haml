%form{:method => "post", :action => to('/' + @object.slug)}
  %legend== Edit '#{@object.description}'
  = haml :form
  %button.btn.btn-primary{:type => 'submit'}
    %i.icon-edit.icon-white
    Save changes
  %button.btn{:type => 'submit', :name => '_method', :value => 'delete', :onclick => 'return confirm("Are you sure you want to delete this?")'}
    %i.icon-trash
    Delete
